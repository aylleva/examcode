@using ExamMVC.Models
@model CreateDoctorVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FbLink">FbLink</label>
                    <input asp-for="FbLink" class="form-control" placeholder="FbLink">
                    <span asp-validation-for="FbLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitLink">TwitLink</label>
                    <input asp-for="TwitLink" class="form-control" placeholder="TwitLink">
                    <span asp-validation-for="TwitLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstLink">InstLink</label>
                    <input asp-for="InstLink" class="form-control" placeholder="InstLink">
                    <span asp-validation-for="InstLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionId">PositionId</label>
                    <select asp-for="PositionId" asp-items="new SelectList(Model.Positions,nameof(Position.Id),nameof(Position.Name))">

                        <option selected disabled value="">Choose a Position</option>
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>